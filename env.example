# Discord Bot Configuration for Production
# Copy this file to .env and fill in your actual values

# Discord OAuth2 Configuration
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# Discord Bot Token (for reading messages)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Telegram Bot Configuration
# Get bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Flask Configuration
SECRET_KEY=your_super_secret_key_change_this_in_production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False
FLASK_ENV=production

# OAuth Redirect URI (update with your domain)
DISCORD_REDIRECT_URI=https://your-domain.com/discord/callback

# Security Settings
OAUTHLIB_INSECURE_TRANSPORT=0  # Set to 1 only for local development

# Database (if you add database support later)
# DATABASE_URL=postgresql://user:password@localhost/discord_bot

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/discord-bot/app.log
