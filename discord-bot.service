Environment="DISCORD_REDIRECT_URI=https://13.60.40.184/discord/callback"
Environment="SECRET_KEY=a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456"
Environment="FLASK_DEBUG=False"

[Install]
