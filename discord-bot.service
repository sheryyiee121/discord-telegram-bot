[Unit]
Description=Discord to Telegram Bot
After=network.target

[Service]
Type=exec
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/discord-telegram-bot
Environment=PATH=/home/ubuntu/discord-telegram-bot/venv/bin:/usr/bin:/bin
ExecStart=/usr/bin/python3 app.py
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=discord-bot

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/home/ubuntu/discord-telegram-bot /var/log/discord-bot

# Environment variables
Environment="FLASK_ENV=production"
Environment="PYTHONPATH=/home/ubuntu/discord-telegram-bot"
Environment="DISCORD_CLIENT_ID=1411364572274888836"
